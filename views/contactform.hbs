<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css" integrity="sha384-jLKHWM3JRmfMU0A5x5AkjWkw/EYfGUAGagvnfryNV3F9VqM98XiIH7VBGVoxVSc7" crossorigin="anonymous">
 <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/solid.css" integrity="sha384-Tv5i09RULyHKMwX0E8wJUqSOaXlyu3SQxORObAI08iUwIalMmN5L6AvlPX2LMoSE" crossorigin="anonymous"/>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/fontawesome.css" integrity="sha384-jLKHWM3JRmfMU0A5x5AkjWkw/EYfGUAGagvnfryNV3F9VqM98XiIH7VBGVoxVSc7" crossorigin="anonymous"/>
 
 <style>
  
.form-control{
    width: 35rem;
}
 </style>
</head>
<body>
    <div class="container mt-4">
        
    <form class="bg-light" action="#" onsubmit="return validation()">
  <div class="form-group">
    <label for="exampleInputEmail1">Username</label>
    <input type="text" class="form-control " id="username" aria-describedby="usernametext" placeholder="Enter Your Name">
    <small id="usernametext" class="form-text text-danger font-weight-bold"></small>
  </div>
  <div class="form-group">
    <label for="Pass">Password</label>
    <input type="password" class="form-control" id="Pass" placeholder="Enter Your Password">
     <small id="passtext" class="form-text text-danger font-weight-bold"></small>
  </div>
  <div class="form-group">
    <label for="conPass">Confirm Password</label>
    <input type="password" class="form-control" id="conPass" placeholder="Enter Password Again">
     <small id="confpasstext" class="form-text text-danger font-weight-bold"></small>
  </div>
  <div class="form-group">
    <label for="mobilenumber">Mobile Number</label>
    <input type="number" class="form-control" id="mobilenumber" placeholder="Enter Your Mobile Number">
     <small id="mobileno" class="form-text text-danger font-weight-bold"></small>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="text" class="form-control" id="email" placeholder="Enter Your Email Id">
     <small id="emailtext" class="form-text text-danger font-weight-bold"></small>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
 </div>
 <script>
    function validation(){
        var username=document.getElementById('username').value;
        var password=document.getElementById('Pass').value;
        var Conpass=document.getElementById('conPass').value;
        var MobileNo=document.getElementById('mobilenumber').value;
        var Email=document.getElementById('email').value;
         if(username== ""){
            var usernametexts=document.getElementById('usernametext');
            usernametexts.innerHTML="**Please Enter the Username";
            return false;
         }
          if((username.length<=2)|| (username.length>20)){
            var usernametexts=document.getElementById('usernametext');
            usernametexts.innerHTML="**The username must be in between 2 and 20";
            return false;
          }
          if(!isNaN(username)){
             var usernametexts=document.getElementById('usernametext');
            usernametexts.innerHTML="**Only characters are allowed";
            return false;
          }
      
         if(password==""){
            var passtext=document.getElementById('passtext');
            passtext.innerHTML="**Please Enter the Paasword";
            return false;
         }
         else if((password.length <= 4)|| (password.length>20)){
            var passtext=document.getElementById('passtext');
            passtext.innerHTML="**The Password must be in between 5 and 20";
            return false;
          }
          else{
             var passtext=document.getElementById('passtext');
            passtext.innerHTML="";
            return false;
          }
        
       
         if(Conpass== ""){
            var conpass=document.getElementById('confpasstext');
            conpass.innerHTML="**Please Enter the Password Again";
            return false;
         }
        else  if(password!=Conpass){
             var conpass=document.getElementById('confpasstext');
            conpass.innerHTML="**Password are not matching";
            return false;
        } else{
             var conpass=document.getElementById('confpasstext');
            conpass.innerHTML="";
            return false;
        }

         if(MobileNo== ""){
            var mobileno=document.getElementById('mobileno');
            mobileno.innerHTML="**Please Enter the Mobile Number";
            return false;
         }
         
         if(isNaN(MobileNo)){
             var mobileno=document.getElementById('mobileno');
            mobileno.innerHTML="**Please Enter Data In Number Format";
            return false;
         }
        else if(MobileNo.length!=10){
             var mobileno=document.getElementById('mobileno');
            mobileno.innerHTML="**Please Enter 10 Digit Mobile Number";
            return false;
         }
         else {
            var mobileno=document.getElementById('mobileno');
            mobileno.innerHTML="";
            return false;
         }
            if(Email== ""){
            var eamiltext=document.getElementById('emailtext');
            emailtext.innerHTML="**Please Enter the Email Id";
            return false;
         }
       else if(Email.indexOf('@')<=0){
            var eamiltext=document.getElementById('emailtext');
            emailtext.innerHTML="**@ position is invalid";
            return false;
         }
        else if((Email.charAt(Email.length-4)!='.') && (Email.charAt(Email.length-3)!='.')){
            var eamiltext=document.getElementById('emailtext');
            emailtext.innerHTML="**  . Invalid Position Please check again your email";
            return false; 
         } else{
            var eamiltext=document.getElementById('emailtext');
            emailtext.innerHTML="";
            return false; 
         }
    }
 </script>
</body>
</html>
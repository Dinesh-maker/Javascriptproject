  </style>
</head>
<body>
  <div class="container">
<form name="cal">
   <input type="text" name="" value="Calculator" id="app_name" >
   <input type="text" name="answers" id="display_answers">
   <div class="layer2">
   <input type="button" value="c" id="clearbutton" onclick="cal.answers.value=''">
   <input type="button" value="=" id="evaluate" onclick="cal.answers.value=eval(cal.answers.value)">
   </div>
  <div class="layer1">
    <input type="button" name="" value="7" class="main_num" onclick="cal.answers.value += '7'">
    <input type="button" name="" value="8" class="main_num" onclick="cal.answers.value += '8'">
    <input type="button" name="" value="9" class="main_num" onclick="cal.answers.value += '9'">
    <input type="button" name="" value="*" class="oper" onclick="cal.answers.value += '*'">
  </div>
<div class="layer1">
    <input type="button" name="" value="4" class="main_num" onclick="cal.answers.value += '4'">
    <input type="button" name="" value="5" class="main_num" onclick="cal.answers.value += '5'">
    <input type="button" name="" value="6" class="main_num" onclick="cal.answers.value += '6'">
    <input type="button" name="" value="-" class="oper" onclick="cal.answers.value += '-'">
  </div>
  <div class="layer1">
    <input type="button" name="" value="1" class="main_num" onclick="cal.answers.value += '1'">
    <input type="button" name="" value="2" class="main_num" onclick="cal.answers.value += '2'">
    <input type="button" name="" value="3" class="main_num" onclick="cal.answers.value += '3'">
    <input type="button" name="" value="+" class="oper" onclick="cal.answers.value += '+'">
  </div>
  <div class="layer1">
    <input type="button" name="" value="." class="main_num" onclick="cal.answers.value += '.'">
    <input type="button" name="" value="0" class="main_num" onclick="cal.answers.value += '0'">
    <input type="button" name="" value="%" class="main_num" onclick="cal.answers.value += '%'">
    <input type="button" name="" value="/" class="oper" onclick="cal.answers.value += '/'">
  </div>
</form>
  </div>
